# github personal account
Host github
  HostName github.com
  User git
  PreferredAuthentications publickey  
  IdentityFile ~/.ssh/git_authorization_key

Host gitea
  HostName gitea-home
  User git
  PreferredAuthentications publickey  
  IdentityFile ~/.ssh/git_authorization_key

Host work.github
  HostName github.com
  User git
  PreferredAuthentications publickey
  IdentityFile ~/.ssh/id_ed25519_work_key


# how to use 
#  ssh -T github
#  ssh -T gitea
#  git clone github:/apscandy/docker-databases.git
