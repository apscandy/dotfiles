[user]
	name = Andrew Clarke
	email = 74689127+apscandy@users.noreply.github.com
	signingkey = ~/.ssh/id_ed25519.pub
[gpg]
	format = ssh
[commit]
	gpgsign = true
[init]
	defaultBranch = main
[core]
    editor = nvim
    excludesfile = ~/.gitignore_global
[pull]
    ff = only
[merge]
	ff = no
[column]
	ui = auto
[branch]
	sort = -committerdate
[alias]
    lg = "log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
    lgf = "log --graph --color=always --abbrev-commit --decorate --date=relative --pretty=medium"
    ch = checkout
    br = branch
    st = status
    br = branch
    cm = commit -m
    back = reset --soft HEAD~1
    hard = reset --hard
    last = log -1 HEAD
    aa = !git add -A && git status
    cma = !git add -A && git commit -m
    wclone = clone --bare
    wa = worktree add
    wl = worktree list
    wr = worktree remove
[credential "https://github.com"]
	helper = 
	helper = !/home/andy/.nix-profile/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/home/andy/.nix-profile/bin/gh auth git-credential
